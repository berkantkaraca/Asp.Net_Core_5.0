@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Düzenleme Sayfası</h3>
</div>

@* 1. parametre action ismi
2. parametre controller
3. parametre form methot türü *@
@using (Html.BeginForm("EditSkill", "Skill", FormMethod.Post))
{
    <form class="form-group" method="post">
        @Html.HiddenFor(x => x.SkillID) @* id tutulacak burda *@
        <br />
        @Html.Label("Yetenek Başlığı")
        @Html.TextBoxFor(x=>x.Title,new{@class = "form-control"})
        <br />

        <label>Değer</label>
        @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Güncelle</button>
    </form>
}