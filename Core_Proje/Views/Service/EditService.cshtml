@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0">Hizmet Düzenleme Sayfası</h3>
</div>

@* 1. parametre action ismi
2. parametre controller
3. parametre form methot türü *@
@using (Html.BeginForm("EditService", "Service", FormMethod.Post))
{
    <form class="form-group" method="post">

        @Html.HiddenFor(x => x.SeviceID)
        <br />
        @Html.Label("Hizmet Başlığı")
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <br />

        <label>Resim Yolu</label>
        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
        <br />

        <button class="btn btn-outline-success">Güncelle</button>
    </form>
}